<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--layout for CarvingsFragment-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".carvings.CarvingsFragment">

        <!--Carving1-->
        <ImageView
            android:id="@+id/image_carving1"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:contentDescription="@string/carving1_title"
            android:onClick="loadCarving1"
            android:src="@drawable/carving1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_carving1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:onClick="loadCarving1"
            android:text="@string/carving1_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <!--Carving2-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_carving2_Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="96dp" />

        <ImageView
            android:id="@+id/image_carving2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/carving2_title"
            android:onClick="loadCarving2"
            android:src="@drawable/carving2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_carving1" />

        <TextView
            android:id="@+id/text_carving2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:onClick="loadCarving2"
            android:text="@string/carving2_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_carving2_Top" />

        <!--Carving3-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_carving3_Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="191dp" />

        <ImageView
            android:id="@+id/image_carving3"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/carving3_title"
            android:onClick="loadCarving3"
            android:src="@drawable/carving3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_carving2" />

        <TextView
            android:id="@+id/text_carving3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:onClick="loadCarving3"
            android:text="@string/carving3_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_carving3_Top" />

        <!--Carving4-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_carving4_Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="287dp" />

        <ImageView
            android:id="@+id/image_carving4"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/carving4_title"
            android:onClick="loadCarving4"
            android:src="@drawable/carving4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_carving3" />

        <TextView
            android:id="@+id/text_carving4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:onClick="loadCarving4"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_carving4_Top" />

        <!--Carving5-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_carving5_Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="383dp" />

        <ImageView
            android:id="@+id/image_carving5"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/carving5_title"
            android:onClick="loadCarving5"
            android:src="@drawable/carving5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_carving4" />

        <TextView
            android:id="@+id/text_carving5_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:onClick="loadCarving5"
            android:text="@string/carving5_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_carving5_Top" />

        <!--Carving6-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_carving6_Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="480dp" />

        <ImageView
            android:id="@+id/image_carving6"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/carving6_title"
            android:onClick="loadCarving5"
            android:src="@drawable/carving6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_carving5" />

        <TextView
            android:id="@+id/text_carving6_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:onClick="loadCarving6"
            android:text="@string/carving6_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_carving6_Top" />

        <!--Carving7-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_carving7_Top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="576dp" />

        <ImageView
            android:id="@+id/image_carving7"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/carving7_title"
            android:onClick="loadCarving7"
            android:src="@drawable/carving7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_carving6" />

        <TextView
            android:id="@+id/text_carving7_title"
